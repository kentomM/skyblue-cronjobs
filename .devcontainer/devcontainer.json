{
    "name": "scraping cloud founding",                      // VScodeがコンテナに接続したときのタイトルを自由に設定
    "dockerComposeFile": "../docker-compose.yml",      // docker-conpose.ymlファイルを指定
    "service": "app",                            // docker-conpose.ymlファイル内に記載したサービス名を指定
    "workspaceFolder": "/workspace",                // VScode接続時に開くフォルダを指定
    "customizations": {
        "vscode": {
            "extensions": [                         // VSCodeの拡張機能
                "ms-python.python",
                "ms-toolsai.jupyter",
                "ms-python.flake8",
                "ms-python.black-formatter",
                "oderwat.indent-rainbow",
                "PKief.material-icon-theme",
                "mosapride.zenkaku",
                "aaron-bond.better-comments",
                "formulahendry.code-runner",
                "ms-python.vscode-pylance",
                "streetsidesoftware.code-spell-checker",
                "KevinRose.vsc-python-indent"
            ],
            "settings": {                           // VScodeの設定を記載
                "files.autoSave": "afterDelay"      // ファイルのオートセーブ
            }
        }
    }
}
